<LoginPage>:
    BoxLayout:        
        canvas.before:
            Color:
                rgba: Color_BG
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        LayoutConstructor:
            Label:
                text:app.LanguageTex[app.Languagetext]['Title'] 
        LayoutConstructor:
            orientation: 'vertical'
            Label:
                text:app.LanguageTex[app.Languagetext]['User'] 
            TextInput:
        LayoutConstructor:
            orientation: 'vertical'
            Label:
                text:app.LanguageTex[app.Languagetext]['Password'] 
            TextInput:
        LayoutConstructor:
            Label:
                text:app.LanguageTex[app.Languagetext]['Nada'] 
        LayoutConstructor:
            Button:
                text:app.LanguageTex[app.Languagetext]['Login']
            