<InitScreen>:
    canvas.before:
        Color:
            rgba: (0.933, 0.933, 0.933, 1)
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint:(.2,.1)
            canvas.before:
                Color:
                    rgba: (0.933, 0.933, 0.933,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                size_hint:(.05,.1)
            AnchorLayout:
                anchor_x: 'left'
                Label:
                    text: app.LanguageTex['Portuguese']['Welcome']
                    font_size: '25dp'
                    color:0,0,0,1
                    size_hint:(None,None)
                    size: self.texture_size
        BoxLayout:
            size_hint:(1,.1)            
            canvas.before:
                Color:
                    rgba: (0.933, 0.933, 0.933,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                size_hint:(.05,.1)
            AnchorLayout:
                anchor_x: 'left'
                Label:
                    text: app.LanguageTex['Portuguese']['Welcome2']
                    font_size: '20dp'
                    color:0,0,0,1
                    size_hint:(None,None)
                    size: self.texture_size
        BoxLayout:
            size_hint:(1,.1) 
            canvas.before:
                Color:
                    rgba: (0.933, 0.933, 0.933,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: app.LanguageTex['Portuguese']['DBinsert']
                font_size: '20dp'
                color:0,0,0,1
        BoxLayout:
            size_hint:(1,.1)
            canvas.before:
                Color:
                    rgba: (0.933, 0.933, 0.933,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                size_hint_x:0.05
                canvas.before:
                    Color:
                        rgba: (0.933, 0.933, 0.933,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
            Label:
                text: app.LanguageTex['Portuguese']['DBHTML']
                size_hint_x: .30
                font_size: '20dp'
                color:0,0,0,1
            TextInput:
                multiline:False
                size_hint_x: .4
            Label:
                text: app.LanguageTex['Portuguese']['Port']
                size_hint_x:0.12
                font_size: '20dp'
                color:0,0,0,1
            TextInput:
                multiline:False
                size_hint_x: .20
            BoxLayout:
                size_hint_x:0.05
                canvas.before:
                    Color:
                        rgba: (0.933, 0.933, 0.933,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
        BoxLayout:
            canvas.before:
                Color:
                    rgba: (1, 0.5, 0, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
                
<SettingsScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu'